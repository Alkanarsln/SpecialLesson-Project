@model Instructor
@{
    ViewData["Title"] = "UpdateIns";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<h1>UpdateIns</h1>

<form asp-area="user" asp-controller="Instructor" asp-action="UpdateIns" method="post">
    <input type="hidden" name="ID" value="@Model.ID" />
    <input type="text" name="InstructorName" value="@Model.InstructorName" placeholder="Öğretmen Adı Giriniz" /><br /><br />
    <input type="text" name="InstructorSurname" value="@Model.InstructorSurname" placeholder="Öğretmen Soyadı Giriniz" /><br /><br />
    <input type="text" name="Email" value="@Model.Email" placeholder="Email Giriniz" /><br /><br />
    <input type="text" name="Password" value="@Model.Password" placeholder="Password Giriniz" /><br /><br />
    <input type="text" name="Price" value="@Model.Price" placeholder="Saatlik Ücret  Giriniz" /><br /><br />
    <input type="text" name="Phone" value="@Model.Phone" placeholder=" Telefon Giriniz Giriniz" /><br /><br />
    <input type="text" name="Adress" value="@Model.Adress" placeholder=" Adres Giriniz" /><br /><br />
    <input type="text" name="Description" value="@Model.Description" placeholder="Özgeçmiş Yazınız" /><br /><br />
    <select class="custom-select" name="BranchName">
        <option selected>@Model.BranchName</option>
        <option value="Fizik">Fizik</option>
        <option value="Matematik">Matematik</option>
        <option value="İngilizce">İngilizce</option>
        <option value="Kimya">Kimya</option>
        <option value="Türkçe">Türkçe</option>
        <option value="Tarih">Tarih</option>
    </select>
    <input type="submit" value="Update" class="btn btn-success" />
</form>