@model IEnumerable<Branch>
@{
    ViewData["Title"] = "BranchList";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<h1>BranchList</h1>

@if (Model.Count() == 0)
{
    <div class="alert alert-danger" role="alert">
        KAYIT BULUNAMADI...!
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">##</th>
                <th scope="col">Eğitmen İsmi </th>
                <th scope="col">Eğitmen Soyismi</th>
                <th scope="col">Branş</th>
                <th scope="col">Öğrenci İsmi</th>
                <th scope="col">Öğrenci Soyismi</th>
                <th scope="col">###</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {

                <tr>
                    <th scope="row">@item.ID</th>
                    <td>@item.InstructorName </td>
                    <td>@item.InstructorSurname </td>
                    <td>@item.BranchName </td>
                    <td>@item.PupilName </td>
                    <td>@item.PupilSurname </td>
                </tr>
            }

        </tbody>
    </table>
}


