@model Instructor
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<h1>Update</h1>

@if (ViewBag.InstructorUpdateError != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.InstructorUpdateError
    </div>
}

<form asp-area="User" asp-controller="Instructor" asp-action="Update" method="post">
    <input type="hidden" name="ID" value="@Model.ID" />
    <input type="text" name="InstructorName" value="@Model.InstructorName" placeholder="Eğitmen ismi giriniz" /><br />
    <input type="text" name="InstructorSurname" value="@Model.InstructorSurname" placeholder="Eğitmen Soyismi giriniz" /><br />
    <input type="email" name="Email" value="@Model.Email" placeholder="Email giriniz" /><br />
    <input type="password" name="Password" value="@Model.Password" placeholder="Password giriniz" /><br />
    <input type="text" name="Adress" value="@Model.Adress" placeholder="Adres giriniz" /><br />
    <input type="text" name="Phone" value="@Model.Phone" placeholder="Telefon giriniz" /><br />
    <input type="text" name="Price" value="@Model.Price" placeholder="Saatlik Ücret giriniz" /><br />
    <select class="custom-select" name="BranchName" value="@Model.BranchName">
        <option selected>@Model.BranchName</option>
        <option value="Fizik">Fizik</option>
        <option value="Matematik">Matematik</option>
        <option value="İngilizce">İngilizce</option>
        <option value="Kimya">Kimya</option>
        <option value="Türkçe">Türkçe</option>
        <option value="Tarih">Tarih</option>
    </select>
    <input type="submit" value="Kaydet" class="btn btn-dark"/>
</form>
