


    @model IEnumerable<Branch>
@{
    ViewData["Title"] = "BranchList";
    Layout = "~/Areas/User/Views/Shared/_LayoutPupil.cshtml";
}

<h1>BranchList</h1>

@if (Model.Count() == 0)
{
    <div class="alert alert-danger" role="alert">
        KAYIT BULUNAMADI...!
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">##</th>
                <th scope="col">Eğitmen İsmi </th>
                <th scope="col">Eğitmen Soyismi</th>
                <th scope="col">Branş</th>
                <th scope="col">###</th>

            </tr>
        </thead>
        <tbody>


            @foreach (var item in Model)
            {


                <tr>
                    <th scope="row">@item.ID</th>
                    <th scope="row">@item.PupilID</th>
                    <td>@item.InstructorName </td>
                    <td>@item.InstructorSurname </td>
                    <td>@item.BranchName </td>

                    <td><a asp-area="User" asp-controller="Pupil" asp-action="InsDelete" asp-route-id="@item.PupilID" class="btn btn-warning">Instructor Delete</a></td>
                </tr>




            }



        </tbody>
    </table>



}


